#GDAL depends on this. If we are building proj4, we need to turn off the VTK proj4

if(BUILD_VTK)

    set(SYSTEM_libproj4 FALSE)

    #turn off vtk's proj4 so we don't conflict with our build copy
    if(BUILD_PROJ4)
        set(ENV{LIBPROJ4_DIR} "${CMAKE_BINARY_DIR}/lib/proj4")
        set(SYSTEM_libproj4 TRUE)
    endif()

    ExternalProject_Add(
	    VTK
	    URL http://www.vtk.org/files/release/8.0/VTK-8.0.0.tar.gz
	    UPDATE_COMMAND ""
	    #PATCH_COMMAND patch -p1  < ${CMAKE_BINARY_DIR}/vtk-8.0.0.patch
	    CMAKE_ARGS -DCMAKE_INSTALL_PREFIX=${CMAKE_BINARY_DIR}/lib/VTK -DCMAKE_BUILD_TYPE=Release -DVTK_USE_SYSTEM_libproj4=${SYSTEM_libproj4}
	    BUILD_COMMAND make -j10
	    INSTALL_COMMAND make install
	    BUILD_IN_SOURCE 1
	    )
endif()

